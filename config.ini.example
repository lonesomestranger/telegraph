[pyrogram]
# 1. Получите api_id и api_hash на https://my.telegram.org
api_id = 1234567
api_hash = 0123456789abcdef0123456789abcdef

# 2. Укажите номер телефона для сессии Pyrogram
phone_number = +1234567890

[scanner]
# Количество сообщений для сканирования в каждом канале
scan_limit = 200

# Максимальная глубина рекурсивного сканирования (вложенность репостов канала в канал)
max_depth = 3

# Пауза в секундах между сканированием разных каналов во избежание флудвейтов
channel_scan_pause = 5

# Пауза в секундах (message_batch_pause) после обработки N (message_batch_size) сообщений внутри одного канала
message_batch_pause = 2
message_batch_size = 50